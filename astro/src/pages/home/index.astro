<style>
  :global(.shell-main.home-page) {
    padding-top: 0;
  }
  :global(.home-page .hero) {
    max-width: none;
    margin: 0;
  }
  :global(.home-page .hero.hero-cover) {
    min-height: calc(100vh - var(--nav-stack));
    border-radius: 0;
    padding: 0;
    width: 100%;
    margin-bottom: clamp(16px, 4vw, 40px);
  }
  :global(.home-page .hero.hero-cover h1),
  :global(.home-page .hero.hero-cover p) {
    color: #fff;
    text-shadow: 0 18px 42px rgba(0, 0, 0, 0.55);
  }
  :global(.home-page .hero.hero-cover .hero-content) {
    max-width: var(--max);
    margin: 0 auto;
    min-height: inherit;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding: clamp(48px, 12vh, 120px) var(--gutter) clamp(28px, 6vh, 60px);
    padding-left: clamp(16px, 4vw, 48px);
  }
  :global(.home-page .map-gallery) {
    padding: 0 0 clamp(64px, 8vw, 120px);
    background: transparent;
  }
  .gallery-header {
    display:flex;
    justify-content:space-between;
    align-items:center;
    margin:4px 0 12px;
  }
  .gallery-header h2 {
    margin:0;
  }
  .controls {
    display:flex;
    align-items:center;
    gap:10px;
  }
  .muted { color:var(--muted); }
  .btn {
    display:inline-block;
    padding:8px 12px;
    border:1px solid var(--line);
    border-radius:12px;
    background:var(--sand);
    cursor:pointer;
    color:var(--fg);
  }
  .btn:hover {
    filter:brightness(.98);
  }
  .slides {
    position:relative;
    overflow:hidden;
  }
  .slide {
    min-height:520px;
  }
  .slide:not(.active) {
    display:none;
  }
  .slide h3 {
    margin:6px 0 10px;
  }
  .map {
    width:100%;
    min-height:420px;
    height:420px;
    border:1px solid var(--line);
    border-radius:14px;
    background:var(--paper);
    box-shadow:var(--shadow);
  }
  .legend {
    list-style:none;
    padding:8px 0 0;
    margin:0;
    color:var(--muted);
    display:flex;
    gap:16px;
  }
  #greeting {
    display:inline-block;
    transition:opacity .35s ease;
  }
  #greeting.is-fading {
    opacity:0;
  }
</style>
